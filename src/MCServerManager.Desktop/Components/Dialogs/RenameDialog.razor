@using MCServerManager.Desktop.Services
@using MCServerManager.Desktop.Controllers
@using MCServerManager.Desktop.Utils
@inject CredentialService CredentialService
@inject SftpController Sftp

<MudDialog Style="margin-top: 100px">
	<DialogContent>
		<MudTextField 
			@bind-Value="NewName" 
			HelperText="@($"The {(Directory?"folder":"file")} will be saved as {PathUtils.GetFullPath(Path, NewName)}")"
			Required="true"
			RequiredError="@($"{(Directory?"Folder":"File")} Name is required")"
			Label="@($"New {(Directory?"folder":"file")} Name")"
			Immediate="true"
			FullWidth="true"
			Disabled="_renaming"/>
		@if (_existing)
		{
			<MudAlert Severity="Severity.Error">There is already a file or folder with the name @_filenamecopy</MudAlert>
		}
	</DialogContent>
	<DialogActions>
		<MudButton Color="Color.Primary" OnClick="Submit" Disabled="_renaming">
			@if (_renaming)
			{
				<MudProgressCircular Class="ms-n1" Size="Size.Small" Indeterminate="true"/>
				<MudText Class="ms-2">
					@(IsRename ? "Renaming" : "Moving")
				</MudText>
			}
			else
			{
				<MudText>
					@(IsRename ? "Rename" : "Move")
				</MudText>
			}
		</MudButton>
	</DialogActions>
</MudDialog>